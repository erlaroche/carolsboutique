/*center name*/
h1.name, h2 {
	text-align: center;
	border: 2px solid black;
	border-radius: 15px;
	font-size: 40px;
	margin-top: 60px;
	margin-left: auto;
	margin-right: auto;
	background-color: #F5FFF5;
	-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
	-webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
	-moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
}
h4 {
	text-align: center;
	border: 2px solid black;
	border-radius: 15px;
	font-size: 20px;
	margin-top: 60px;
	margin-left: auto;
	margin-right: auto;
	background-color: #F5FFF5;
	-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
	-webkit-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
	-moz-box-shadow: 0 0 8px rgba(0, 0, 0, .8);
	font-family: 'PT Sans', sans-serif;
}
h4.biography {
	font-size: 25px;
	padding: 7px;
}
h4.products {
	font-size: 25px;
